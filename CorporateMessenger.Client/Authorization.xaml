<Window x:Class="CorporateMessenger.Client.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="700" Width="1000"
        Background="#4169E1" Foreground="White"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        SizeToContent="Manual"
        ResizeMode="NoResize">
    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="20">

            <!-- Логотип -->
            <Image Source="pack://application:,,,/Properties/Images/logo.png"
                   Width="200"
                   Height="150"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <!-- Заголовок -->
            <TextBlock Text="Вход в корпоративную сеть"
                       FontSize="25"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       MaxWidth="400"/>

            <!-- Логин -->
            <TextBlock Text="Логин:" Margin="0,15,0,0" FontSize="20"/>
            <TextBox x:Name="txtUsername"
                     Background="#FFFFFF"
                     Foreground="Black"
                     BorderThickness="0"
                     FontSize="20"
                     Padding="10"
                     Height="50"
                     HorizontalAlignment="Stretch"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:" Margin="0,15,0,0" FontSize="20"/>
            <PasswordBox x:Name="txtPassword"
                         Background="#FFFFFF"
                         Foreground="Black"
                         BorderThickness="0"
                         FontSize="20"
                         Padding="10"
                         Height="50"
                         HorizontalAlignment="Stretch"/>

            <!-- Кнопка Войти -->
            <Button Content="Войти" Click="BtnLogin_Click"
                    Margin="0,25,0,0"
                    Background="#B8860B"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    FontSize="18"
                    Height="50" MaxWidth="200"/>

            <!-- Статус -->
            <TextBlock x:Name="StatusTextBlock" 
                       Foreground="#FFFF00" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       Margin="20,10,0,0" 
                       Text=""/>

        </StackPanel>
    </Grid>
</Window>
